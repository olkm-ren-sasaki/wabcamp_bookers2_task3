<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 63, 63, format: "jpeg", fallback: "no_image.jpg", size: "63x63" %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduciton</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book, local: true do |f| %>
        <div class="form-group">
          <label for="title">Title</label><br>
          <%= f.text_field :title, id: "title", class: "form-control book_title" %>
        </div>
        <div class="form-group">
          <label for="option">option</label><br>
          <%= f.text_area :body, id: "option", class: "form-control book_body" %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Book", class: "btn btn-success" %>
        </div>
        <% end %>
        

      </div>
      <div class="col-md-8">
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>

              <td>
                <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to "show", user_path(user) %>
              </td>

            </tr>
            <% end %>


          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>