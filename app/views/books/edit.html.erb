
<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		  <h1>Editing Book</h1>
  		  <% if @book.errors.any? %>
        <div id="error_explanation" class="container px-5 px-sm-0">
          <h3>
            <%= @book.errors.count %>
            errors prohibited this obj from being saved:
          </h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li>
              <%= message %>
            </li>
            <% end %>
          </ul>
        </div>
        <% end %>
  		   <%= form_with model: @book, local: true do |f| %>
  		   <div class="form-group">
  		     <label for="title">Title</label><br>
  		     <%= f.text_field :title, id: "title", class: "form-control book-title" %>
  		   </div>
  		   <div class="form-group">
  		     <label for="option">Option</label><br>
  		     <%= f.text_area :body, id: "option", class: "form-control book-body" %>
  		   </div>
  		   <div class="form-group">
  		     <%= f.submit "Update Book", class: "btn btn-success"%>
  		   </div>
  		   <% end %>
  		   <%= link_to "Show", book_path(@book) %> |
  		   <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</main>